<button type="button" id="refresh" class="btn btn-info" style="visibility: hidden">Refresh Recent Messages</button>


  <ul>
    {{#each messageData}}
    <h5>Inbound Message</h5>
      <li>From: {{this.from_number_json}}</li>
      <li>To: {{this.to_number_json}}</li>
      <li>Message: {{this.text_json}}</li>
      <li>ID: {{this._id}}</li>
    <hr>
    {{/each}}
  </ul>

    <ul>
    {{#each sentMessageData}}
    <h5>Sent Message</h5>
      <li>From: Plivo</li>
      <li>To: {{this.toNumber}}</li>
      <li>Message: {{this.messageText}}</li>
    <hr>
    {{/each}}
  </ul>
