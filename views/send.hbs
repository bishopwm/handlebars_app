<div class="send-container">
    <h2>Send New Message</h2>
</div>
<form class="form form-group" action="/send-message" method="POST">
<div class="form-components-container">
    <label>Recipient Number:</label><br>
    <input name="To" type="text" placeholder="Phone Number"><br>
    <label id="message-label">Message:</label><br>
    <input id="message-input" name="Text" type="text" placeholder="Type here..."><br><br>
    <div class="alert alert-success col-2" role="alert" style="visibility: hidden">
    Message Sent!
    </div>
    <input class="btn btn-primary" id="submit" type="submit" value="Submit"/>
</div>
    
</form>
<script>
$('#submit').click(function(){ 
   $('div').css('visibility','visible');
}); 
</script>